  <style>
    /* ---- reset / base ---- */
    *{box-sizing:border-box;}
    body{margin:0;font-family:system-ui;background:#111;color:#eee;}

    /* ---- password overlay ---- */
    #gate{
      position:fixed;
      inset:0;
      background:#000;
      display:flex;
      align-items:center;
      justify-content:center;
      flex-direction:column;
      z-index:9999;
      transition:opacity .6s;
    }
    #gate.hide{opacity:0;pointer-events:none;}
    #gate h1{font-size:1.6rem;margin-bottom:1rem;}
    #gate input{
      padding:.6rem 1rem;
      font-size:1.1rem;
      border:none;
      border-radius:4px;
      width:220px;
      text-align:center;
    }
    #gate button{
      margin-top:.8rem;
      padding:.5rem 1.4rem;
      border:none;
      border-radius:4px;
      background:#1e90ff;
      color:#fff;
      font-size:1rem;
      cursor:pointer;
    }
    #gate button:hover{background:#0c7bd9;}
    #msg{color:#ff4d4d;margin-top:.6rem;height:1.2rem;font-size:.9rem;}
  </style>
